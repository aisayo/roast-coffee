<form action="/login" method="POST">
  <label for="username">Username</label>
  <input type="text" id="username" placeholder="Enter your email address here" required/>
  <label for="password">Password</label>
  <input type="password" id="password" placeholder="Enter your password here" required/>
  <label for="password_repeat" id="password_repeat" placeholder="Reenter your password" required/> 
  <input type="submit" id="submit" value="Start Your Journey"/>
</form>